{
     "class": "AS3",
     "action": "deploy",
     "persist": true,
     "declaration": {
         "class": "ADC",
         "schemaVersion": "3.0.0",
         "id": "${RULE_NAME}",
         "label": "${TENANT}",
         "remark": "${RULE_DESCRIPTION}",
         "${TENANT}": {
             "class": "Tenant",
             "defaultRouteDomain": 0,
             "Application_1": {
                 "class": "Application",
                 "template": "http",
             "serviceMain": {
                 "class": "Service_HTTP",
                 "virtualAddresses": [
                     "${VIP_ADDRESS}"
                 ],
                 "pool": "web_pool"
                 },
                 "web_pool": {
                     "class": "Pool",
                     "monitors": [
                         "http"
                     ],
                     "members": [
                         {
                             "servicePort": 80,
                             "serverAddresses": [
                                 "${POOL_MEMBER1}",
                                 "${POOL_MEMBER2}"
                             ]
                         }
                     ]
                 }
             }
         }
     }
}
